<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cometchatworkspace.components.messages.common.message_information.CometChatMessageInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:elevation="8dp"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">
                <ImageView
                    android:id="@+id/backIcon"
                    android:paddingRight="16dp"
                    android:clickable="true"
                    android:src="@drawable/ic_back_selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold"
                    android:text="Message Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.Toolbar>
            <RelativeLayout
                android:layout_marginTop="?actionBarSize"
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatTextBubble
                    android:layout_marginTop="8dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/vw_text_message"
                    app:messageAlignment="right"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatStickerBubble
                    android:id="@+id/vw_sticker_message"
                    android:layout_width="wrap_content"
                    app:messageAlignment="right"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    tools:visibility="visible"/>
                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatImageBubble
                    android:id="@+id/vw_image_message"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    app:messageAlignment="right"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_height="wrap_content"/>

                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatVideoBubble
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    app:messageAlignment="right"
                    android:id="@+id/vw_video_message"
                    tools:visibility="visible"
                    android:layout_height="wrap_content"/>

                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatFileBubble
                    android:id="@+id/vw_file_message"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    app:messageAlignment="right"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"/>

                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatAudioBubble
                    android:id="@+id/vw_audio_message"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    app:messageAlignment="right"
                    tools:visibility="visible"
                    android:visibility="gone"/>

                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatLocationBubble
                    android:id="@+id/vw_location_message"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    app:messageAlignment="right"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:visibility="gone"/>
                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatPollBubble
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    app:messageAlignment="right"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:id="@+id/vw_polls_message"/>
                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatWhiteboardBubble
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:id="@+id/vw_whiteboard_message"
                    app:messageAlignment="right"/>
                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatDocumentBubble
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:id="@+id/vw_writeboard_message"
                    app:messageAlignment="right"/>

                <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatConferenceBubble
                    android:id="@+id/vw_meeting_message"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_height="220dp"
                    app:messageAlignment="left"/>

            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/swipe_refresh"
        android:layout_height="match_parent">
        <com.cometchatworkspace.components.shared.sdkDerivedComponents.cometchatMessageReceiptList.CometChatReceiptsList
            android:id="@+id/rvReceipts"
            android:layout_marginTop="16dp"
            app:showDeliveryReceipt="true"
            app:showReadReceipt="true"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>>
</androidx.coordinatorlayout.widget.CoordinatorLayout>