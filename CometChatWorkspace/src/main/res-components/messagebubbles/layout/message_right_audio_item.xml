<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true">
    <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatMessageBubble
        android:layout_width="wrap_content"
        android:id="@+id/cometchatBubble"
        app:messageAlignment="right"
        android:layout_height="wrap_content">
        <com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatAudioBubble
            android:layout_width="wrap_content"
            android:id="@+id/audio_message_bubble"
            android:layout_height="wrap_content"/>
    </com.cometchatworkspace.components.messages.message_list.message_bubble.CometChatMessageBubble>
</LinearLayout>