<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:id="@+id/view_foreground"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:padding="5dp">

    <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
        android:id="@+id/userListItem_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        app:background_color="@color/colorPrimary"
        app:corner_radius="18dp"
        tools:src="@tools:sample/avatars" />

    <com.cometchatworkspace.components.shared.secondaryComponents.cometchatStatusIndicator.CometChatStatusIndicator
        android:id="@+id/userListItem_userPresence"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/userListItem_avatar"
        android:layout_alignBottom="@+id/userListItem_avatar"
        app:cardCornerRadius="8dp"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/userListItem_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userListItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/name"
            android:textStyle="bold"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/userListItem_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:textSize="@dimen/eleven"
            tools:text="@tools:sample/full_names" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSeperator"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:background="@color/light_grey" />

</RelativeLayout>

